---
import Layout from "../../layouts/Layout.astro"
import { Image } from 'astro:assets';

import Project2 from "../../images/france.webp"
import ProjectDescriptions from "../../components/ProjectDescriptions.astro";
---
<Layout title="Project | France">
    <main class="france" id="france">
        <div class="container">
            <Image src={Project2} alt="white modern house" class="[ project-2 ] img-fluid"/>

            <ProjectDescriptions 
                projectDetails="Embrace the charm of the French countryside with this Provencal Villa, located in the heart of Provence, France. ARCHI's architectural design captures the essence of Provencal architecture, blending rustic elements with modern comforts. The interior layout reflects a fusion of elegance and rustic simplicity, with reclaimed materials and earthy tones creating a cozy ambiance. Surrounding the villa, the landscaping concept evokes the romance of Provence, with fragrant lavender fields, olive groves, and picturesque courtyards offering a true Mediterranean experience." 
                location="Paris, France" 
                projectType="Residential" 
                projectDuration="2017-2018"/>

            <div class="d-flex justify-content-between mt-2">
                <a href="/projects/sweden" class=" border border-dark rounded-5 px-2"><svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 48 48"><g fill="none" stroke="#000" stroke-linecap="round" stroke-linejoin="round" stroke-width="4"><path d="M5.79889 24H41.7989"></path><path d="M17.7988 36L5.79883 24L17.7988 12"></path></g></svg> Previous</a>
                <a href="/projects/london" class=" border border-dark rounded-5 px-2">Next <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 48 48"><g fill="none" stroke="#000" stroke-linecap="round" stroke-linejoin="round" stroke-width="4"><path d="M41.9999 24H5.99994"></path><path d="M30 12L42 24L30 36"></path></g></svg></a>
            </div>
        </div>
    </main>
</Layout>

<style>
    .project-2{
        background-position: center;
        background-size: cover;
        background-attachment: fixed;
	  	background-repeat: no-repeat;
    }
</style>