---
import Layout from "../../layouts/Layout.astro"
import { Image } from 'astro:assets';

import Project4 from "../../images/project-image-4.webp"
import ProjectDescriptions from "../../components/ProjectDescriptions.astro";
---
<Layout title="Project | Philippines">
    <main class="philippines" id="philippines">
        <div class="container">
            <Image src={Project4} alt="white modern house" class="[ project-4 ] img-fluid"/>

            <ProjectDescriptions 
                projectDetails="Experience the ultimate tropical getaway at this luxurious resort nestled in Palawan, Philippines. ARCHI's architectural design celebrates the natural beauty of the Philippines, with open-air pavilions, indigenous materials, and panoramic views of the crystal-clear waters. Inside, the interior layout exudes tropical elegance, with locally sourced furnishings and organic textures creating a serene atmosphere. Surrounding the resort, the landscaping concept showcases lush tropical gardens, cascading water features, and secluded beachfront cabanas, offering guests an unforgettable island paradise experience." 
                location="Palawan, Philippines" 
                projectType="Resort" 
                projectDuration="2022-2023"/>
                
            <div class="d-flex justify-content-between mt-2">
                <a href="/projects/london" class=" border border-dark rounded-5 px-2"><svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 48 48"><g fill="none" stroke="#000" stroke-linecap="round" stroke-linejoin="round" stroke-width="4"><path d="M5.79889 24H41.7989"></path><path d="M17.7988 36L5.79883 24L17.7988 12"></path></g></svg> Previous</a>
            </div>
        </div>
    </main>
</Layout>

<style>
    .project-4{
        background-position: center;
        background-size: cover;
        background-attachment: fixed;
	  	background-repeat: no-repeat;
    }
</style>